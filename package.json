{
    "name": "task-tracker",
    "version": "1.0.0",
    "private": true,
    "description": "A Full-Stack Task Tracker application with React (Vite) and Express.js.",
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "install": "pnpm install",
        "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server dev\"",
        "build": "concurrently \"pnpm --filter client build\" \"pnpm --filter server build\"",
        "start": "concurrently \"pnpm --filter client preview\" \"pnpm --filter server start\"",
        "test": "concurrently \"pnpm --filter client test\" \"pnpm --filter server test\"",
        "lint": "concurrently \"pnpm --filter client lint\" \"pnpm --filter server lint\"",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
        "clean": "rimraf node_modules client/node_modules server/node_modules",
        "db:migrate": "pnpm --filter server run migrate",
        "db:seed": "pnpm --filter server run seed",
        "db:reset": "pnpm run clean && pnpm run db:migrate && pnpm run db:seed"
    },
    "dependencies": {
        "concurrently": "^9.1.2",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,json,md,css,scss}": "prettier --write"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "pnpm@8"
}